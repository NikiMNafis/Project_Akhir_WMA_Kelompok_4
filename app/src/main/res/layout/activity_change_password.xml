<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity"
    android:background="@color/white"
    >
    <RelativeLayout
        android:padding="25dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/text1"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Ubah kata sandi"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="80dp"
                />

            <!--Group Input Password baru-->
            <ImageView
                android:id="@+id/imgPass2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/lock"
                android:layout_marginTop="132dp"
                />
            <ImageView
                android:id="@+id/linePass2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/line_ver"
                android:layout_marginTop="132dp"
                android:layout_toRightOf="@+id/imgPass2"
                />
            <!--Edit Text Password-->
            <EditText
                android:id="@+id/inp_new_pass"
                android:inputType="textPassword"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="132dp"
                android:background="@drawable/custom_input"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="Kata sandi baru"
                app:passwordToggleEnabled="true"
                android:drawableRight="@drawable/ic_baseline_visibility_24"
                android:longClickable="false"
                android:layout_toRightOf="@+id/linePass2"
                />

            <!--Group Input Ulang Password baru-->
            <ImageView
                android:id="@+id/imgPass3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/lock"
                android:layout_marginTop="207dp"
                />
            <ImageView
                android:id="@+id/linePass3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/line_ver"
                android:layout_marginTop="207dp"
                android:layout_toRightOf="@+id/imgPass3"
                />

            <!--Edit Text Password-->
            <EditText
                android:id="@+id/inp_new_pass2"
                android:inputType="textPassword"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="207dp"
                android:background="@drawable/custom_input"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="Ulangi kata sandi baru"
                app:passwordToggleEnabled="true"
                android:drawableRight="@drawable/ic_baseline_visibility_24"
                android:longClickable="false"
                android:layout_toRightOf="@+id/linePass3"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <!--View Group Line-->
            <LinearLayout
                android:id="@+id/lineGroup"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0dp"
                android:gravity="center">
                <!--Button Back-->
                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/arrowleft"
                    android:onClick="onClick"
                    android:layout_gravity="left"
                    />
                <ImageView
                    android:layout_width="320dp"
                    android:layout_height="25dp"
                    android:background="@drawable/line"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="118dp"
                    />
                <ImageView
                    android:layout_width="320dp"
                    android:layout_height="25dp"
                    android:background="@drawable/line"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_change_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAlignment="gravity"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:text="ubah kata sandi"
                    android:background="@drawable/button_view_profile_background"
                    android:onClick="onClick"
                    />

                <!--Lupa Password-->
                <TextView
                    android:id="@+id/btn_forgot_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lupa Kata Sandi?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_below="@+id/btn_masuk_google"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:onClick="onClick"
                    />

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>