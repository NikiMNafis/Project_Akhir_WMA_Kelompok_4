<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:layout_marginTop="55dp"
    android:layout_above="@+id/bottom_navigation"
    android:background="@drawable/round_corner_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textColor="@color/white"
            android:fontFamily="@font/lato_regular"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/txt_nama_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="16sp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/txt_email_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="15sp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_view_akun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAlignment="gravity"
                android:gravity="start"
                android:padding="16dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:text="Akun"
                android:background="@drawable/button_profile_background"
                android:textAllCaps="false"
                android:drawableRight="@drawable/next_24"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="gravity"
                android:gravity="start"
                android:padding="16dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:text="Ubah Kata Sandi"
                android:background="@drawable/button_profile_background"
                android:textAllCaps="false"
                android:drawableRight="@drawable/next_24"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_media_sosial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="gravity"
                android:gravity="start"
                android:padding="16dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:text="Media Sosial Kami"
                android:background="@drawable/button_profile_background"
                android:textAllCaps="false"
                android:drawableRight="@drawable/next_24"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="gravity"
                android:gravity="start"
                android:padding="16dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:text="About"
                android:background="@drawable/button_profile_background"
                android:textAllCaps="false"
                android:drawableRight="@drawable/next_24"
                />

        </LinearLayout>

    </RelativeLayout>


</FrameLayout>