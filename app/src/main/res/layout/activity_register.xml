<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/white"
    >
    <RelativeLayout
        android:padding="25dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/text1"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Daftar"
                android:textSize="28dp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="80dp"
                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Masukkan data anda"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_below="@+id/text1"
                android:fontFamily="@font/lato_regular"
                />
            <!--Group Input Nama-->
            <ImageView
                android:id="@+id/imgNama"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/person"
                android:layout_marginTop="182dp"
                />
            <ImageView
                android:id="@+id/lineNama"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/line_ver"
                android:layout_toRightOf="@+id/imgNama"
                android:layout_marginTop="182dp"
                />
            <!--Edit Text Nama-->
            <EditText
                android:id="@+id/inp_nama"
                android:inputType="textPersonName"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="182dp"
                android:background="@drawable/custom_input"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="Nama"
                android:layout_toRightOf="@+id/lineNama"
                />

            <!--Group Input Nomor Telepon-->
            <ImageView
                android:id="@+id/imgTelp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/phone2"
                android:layout_marginTop="257dp"
                />
            <ImageView
                android:id="@+id/lineTelp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/line_ver"
                android:layout_marginTop="257dp"
                android:layout_toRightOf="@+id/imgTelp"
                />
            <!--Edit Text Nomor Telepon-->
            <EditText
                android:id="@+id/inp_no_telp"
                android:inputType="phone"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="257dp"
                android:background="@drawable/custom_input"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="Nomor Telepon"
                android:layout_toRightOf="@+id/lineTelp"
                android:maxLength="14"
                />

            <!--Group Input Email-->
            <ImageView
                android:id="@+id/imgEmail"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/mail"
                android:layout_marginTop="332dp"
                />
            <ImageView
                android:id="@+id/lineEmail"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/line_ver"
                android:layout_marginTop="332dp"
                android:layout_toRightOf="@+id/imgEmail"
                />
            <!--Edit Text Email-->
            <EditText
                android:id="@+id/inp_email"
                android:inputType="textEmailAddress"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="332dp"
                android:background="@drawable/custom_input"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="Email"
                android:layout_toRightOf="@+id/lineEmail"
                />

            <!--Group Input Password-->
            <ImageView
                android:id="@+id/imgPass"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/lock"
                android:layout_marginTop="407dp"
                />
            <ImageView
                android:id="@+id/linePass"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/line_ver"
                android:layout_marginTop="407dp"
                android:layout_toRightOf="@+id/imgPass"
                />
            <!--Edit Text Password-->
            <EditText
                android:id="@+id/inp_pass"
                android:inputType="textPassword"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="407dp"
                android:background="@drawable/custom_input"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="Kata Sandi"
                app:passwordToggleEnabled="true"
                android:drawableRight="@drawable/ic_baseline_visibility_24"
                android:longClickable="false"
                android:layout_toRightOf="@+id/linePass"
                />

            <!--Group Input Ulang Password-->
            <ImageView
                android:id="@+id/imgUPass"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/lock"
                android:layout_marginTop="482dp"
                />
            <ImageView
                android:id="@+id/lineUPass"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/line_ver"
                android:layout_marginTop="482dp"
                android:layout_toRightOf="@+id/imgUPass"
                />
            <!--Edit Text Ulang Password-->
            <EditText
                android:id="@+id/inp_ulang_pass"
                android:inputType="textPassword"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="482dp"
                android:background="@drawable/custom_input"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="Ulangi Kata Sandi"
                app:passwordToggleEnabled="true"
                android:drawableRight="@drawable/ic_baseline_visibility_24"
                android:longClickable="false"
                android:layout_toRightOf="@+id/lineUPass"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <!--View Group Line-->
            <LinearLayout
                android:id="@+id/lineGroup"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0dp"
                android:gravity="center">
                <!--Button Back-->
                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/arrowleft"
                    android:onClick="onClick"
                    android:layout_gravity="left"
                    />
                <!--Underline Input Nama-->
                <ImageView
                    android:layout_width="320dp"
                    android:layout_height="25dp"
                    android:background="@drawable/line"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="168dp"
                    />
                <!--Underline Input Nomor Telepon-->
                <ImageView
                    android:layout_width="320dp"
                    android:layout_height="25dp"
                    android:background="@drawable/line"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"
                    />
                <!--Underline Input Email-->
                <ImageView
                    android:layout_width="320dp"
                    android:layout_height="25dp"
                    android:background="@drawable/line"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"
                    />
                <!--Underline Input Password-->
                <ImageView
                    android:layout_width="320dp"
                    android:layout_height="25dp"
                    android:background="@drawable/line"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"
                    />
                <!--Underline Input Ulang Password-->
                <ImageView
                    android:layout_width="320dp"
                    android:layout_height="25dp"
                    android:background="@drawable/line"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"
                    />

                <!--Button Daftar-->
                <ImageButton
                    android:id="@+id/btn_daftar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_arrow_white"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/btn_masuk_google"
                    />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>